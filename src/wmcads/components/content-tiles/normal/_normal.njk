{% macro wmcadsContentTilesNormal(params) %}
{# Imports #}
{%- from "wmcads/components/link/link/_link.njk" import wmcadsLink -%}
{# Set vars #}
{% set class = ' ' + params.classModifiers if params.classModifiers %}
{% set title = params.title if params.title else "Main Title" %} {# set title #}
{# Link vars #}
{% set linkText = params.linkText if params.linkText else "Read more" %} {# set link text #}
{% set link = params.link if params.link else "#" %} {# set link url #}
{% set linkTitle = params.linkTitle if params.linkTitle else "link title" %} {# set link title #}
{% set linkTarget = params.linkTarget if params.linkTarget else "_self" %} {# set link target #}


<article class="wmcads-content-tile{{class}}">
  {#- Title #}
  {%- if params.smallTitle %}
    <h3>{{ title }}</h3>
  {%- else %}
    <h2>{{ title }}</h2>
  {%- endif %}

  {%- if params.copy %}
    {#- Copy #}
    <div class="wmcads-content-tile__copy">
      {{ params.copy | safe | trim  -}}
      {#- Read more -#}
      {%- if params.readMore %}
      {{ wmcadsLink({
        link: link,
        linkTarget: linkTarget,
        linkTitle: linkTitle,
        text: linkText,
        classModifiers: 'wmcads-float-right'
        }) | indent(6) | trim
      }}
      {%- endif %}
    </div>
  {%- endif %}
</article>
{% endmacro %}